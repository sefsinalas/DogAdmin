<label>{{title}}</label>
<section class="{{ ({{hasPrefix}}) ? 'input' : 'form' }}-group">
	@if ( {{hasPrefix}} )
    <span class="input-group-addon">{{prefix}}</span>
	@endif
    <input
    	type="text"
    	class="form-control"
    	name="{{name}}"
    	placeholder="{{title}}"
    	value="{{ ($errors && $errors->any() ? old('description') : (isset($item)? $item->description : '')) }}"
    	{{disabled}}
    >
</section>